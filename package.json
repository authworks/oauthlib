{
  "name": "@authworks/authlib",
  "version": "0.1.0",
  "description": "Simple and flexible load testing tool by developers and for developers",
  "author": "Chao Yang <chao@yang.to>",
  "license": "MIT",
  "repository": "git+https://github.com/authworks/authlib",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --outDir dist --module commonjs",
    "clean": "rimraf dist coverage",
    "typecheck": "tsc --noEmit",
    "lint": "tslint --project tsconfig.json --format stylish",
    "format": "prettier '**/*.{md,js,jsx,json,ts,tsx}' --write",
    "test": "jest --env=node --coverage",
    "test:watch": "jest --env=node --watch --updateSnapshot",
    "prepublish": "npm run build",
    "prebuild": "npm run clean",
    "postbuild": "mv dist/src/* dist/ && rimraf dist/{src,examples} dist/**/__tests__ dist/**/*.{spec,test,dist}.{js,d.ts,js.map}",
    "posttest": "npm run typecheck && npm run lint",
    "preversion": "npm test",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "oauth",
    "OIDC",
    "authorization"
  ],
  "files": [
    "dist"
  ],
  "dependencies": {
    "basic-auth": "^2.0.1",
    "core-js": "^3.4.2",
    "crypto-random-string": "^3.1.0",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "lodash": "^4.17.15",
    "query-string": "^6.11.0",
    "sprintf-js": "^1.1.2",
    "tslib": "^1.9.3",
    "type-is": "^1.6.18"
  },
  "devDependencies": {
    "@types/async": "^3.0.3",
    "@types/basic-auth": "^1.1.3",
    "@types/content-type": "^1.1.3",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.12",
    "@types/type-is": "^1.6.3",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "jest": "^24.9.0",
    "pascal-case": "^2.0.1",
    "prettier": "^1.13.7",
    "rimraf": "^3.0.0",
    "semver": "^6.3.0",
    "ts-jest": "~24.2.0",
    "ts-node": "^8.6.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^3.1.4"
  },
  "optionalDependencies": {
    "@types/faker": "^4.1.7",
    "aes256": "^1.0.4",
    "faker": "^4.1.0",
    "jsonwebtoken": "^9.0.0"
  }
}
